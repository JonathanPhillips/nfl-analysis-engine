[flake8]
max-line-length = 100
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
    F401,  # unused import (handled by isort)
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .tox,
    migrations/versions/*.py
max-complexity = 10
import-order-style = pep8
application-import-names = src
per-file-ignores =
    __init__.py:F401
    tests/*:D100,D101,D102,D103,D104,D105,D106,D107
    src/models/*.py:E501